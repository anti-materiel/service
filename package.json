{
  "name": "service",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/anti-materiel/service.git",
  "author": "Charles Badger",
  "license": "MIT",
  "scripts": {
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "start:dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen -w",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up",
    "test": "jest --env=jsdom -w --coverage --collectCoverageFrom=src/**/*.{ts,tsx}",
    "test:watch": "yarn test --watch",
    "test:ci": "CI=true yarn test"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.migrations.config.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.3",
    "@mikro-orm/postgresql": "^4.5.3",
    "@types/nanoid-dictionary": "^4.2.0",
    "apollo-server-express": "^2.23.0",
    "apollo-server-plugin-base": "^0.11.0",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "globby": "^11.0.3",
    "graphql": "^15.5.0",
    "lodash": "^4.17.21",
    "logform": "^2.2.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.22",
    "nanoid-dictionary": "^4.3.0",
    "tsconfig-paths": "^3.9.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@mikro-orm/cli": "^4.5.3",
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.19",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "apollo-server-core": "^2.23.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pg-mem": "^1.9.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
